<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основная карточка с градиентом (БЕЗ ТЕНИ) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/card_background"
                android:endColor="#FFFEFEFE"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/divider" />
        </shape>
    </item>
    
    <!-- Внутренняя рамка для эффекта глубины -->
    <item android:bottom="1dp" android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
